<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!---->
    <declare-styleable name="ProgressView">
        <!-- 进度条半径 -->
        <attr name="p_radio" format="dimension" />
        <!-- 进度条颜色 -->
        <attr name="p_color" format="reference|color" />
        <!-- 小球半径 -->
        <attr name="titleradio" format="dimension" />
        <!-- 小球颜色 -->
        <attr name="titlecolor" format="reference|color" />

    </declare-styleable>
    <declare-styleable name="ScanCycleView">
        <!-- 进度条半径 -->
        <attr name="s_radio" format="dimension" />
        <!-- 进度条颜色 -->
        <attr name="s_color" format="reference|color" />
        <!-- 小球半径 -->
        <attr name="s_titleradio" format="dimension" />
        <!-- 小球颜色 -->
        <attr name="s_titlecolor" format="reference|color" />
        <!--是否留一个缺口-->
        <attr name="issweep" format="boolean"></attr>
        <!--缺口角度：0~360-->
        <attr name="sweepangle" format="integer" />
        <attr name="isgradlint" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="ProgressV1View">
        <!-- 进度条半径 -->
        <attr name="pv1_radio" format="dimension" />
        <!-- 进度条颜色 -->
        <attr name="pv1_color" format="reference|color" />
        <!-- 圆环宽度 -->
        <attr name="pv1_titleradio" format="dimension" />
        <!-- 进度条颜色 -->
        <attr name="pv1_titlecolor" format="reference|color" />
    </declare-styleable>

</resources>